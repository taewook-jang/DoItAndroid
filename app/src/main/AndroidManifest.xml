            </intent-filter>
        </activity>

        <activity android:name="io.dandi.android.ch02.SampleLinearLayoutActivity"/>
        <activity android:name="io.dandi.android.ch02.LayoutCodeActivity"/>
        <activity android:name="io.dandi.android.ch02.SampleRelativeLayoutActivity"/>
        <activity android:name="io.dandi.android.ch02.SampleScrollLayoutActivity"/>
        <activity android:name="io.dandi.android.ch02.SampleFrameLayoutActivity"/>

        <activity android:name="io.dandi.android.mission.Mission03Activity"/>
        <activity android:name="io.dandi.android.mission.Mission04Activity"/>

        <activity android:name="io.dandi.android.ch03.SampleLayoutInflaterActivity"/>
        <activity android:name="io.dandi.android.ch03.SampleIntentActivity"/>
        <activity android:name="io.dandi.android.ch03.SampleCallIntentActivity"/>
        <activity android:name="io.dandi.android.ch03.SamplePDFViewActivity"/>
        <activity android:name="io.dandi.android.ch03.SampleParcelableActivity"/>
        <activity android:name="io.dandi.android.ch03.SampleLifecycleActivity"/>
        <activity android:name="io.dandi.android.ch03.SampleServiceActivity"/>

        <service
            android:name="io.dandi.android.ch03.MyService"
            android:enabled="true"
            android:exported="true"></service>

    </application>

</manifest>